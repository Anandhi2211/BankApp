<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.bankapp.persistence.TransactionDAO">

    <insert id="create" keyColumn="transaction_id" keyProperty="transactionId" useGeneratedKeys="true" >
        Insert into transactions (transaction_id, amount, transaction_status, account_number )
        values (#{transactionId}, #{amount}, #{transactionStatus}, #{accountNumber})
    </insert>

    <select id="findById">
      Select * From transactions
        where transaction_id = #{transactionId}
    </select>

    <select id="getAll" >
        SELECT * FROM transactions;
    </select>

    <resultMap id="transactionsResultMap" type="com.solvd.bankapp.domain.Transaction" autoMapping="false">
        <id column="transaction_id" property="transactionId"/>
        <result column="amount" property="amount"/>
        <result column="transaction_status" property="transactionStatus"/>
        <result column="account_number" property="accountNumber"/>
    </resultMap>

</mapper>