<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.bankapp.persistence.DepositDAO">

    <insert id="create"  >
        Insert into deposits (deposit_amount, account_number, logincredentials_username, transactions_transaction_id)
        values (#{depositAmount}, #{accountNumber}, #{username}, #{transactionId})
    </insert>

    <select id="findById">
        Select * From deposits
        where transaction_id = #{transactionId}
    </select>

    <select id="getAll" >
        SELECT * FROM deposits;
    </select>


</mapper>