<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solvd.bankapp.persistence.DebitCardDAO">

    <insert id="create"  keyColumn="card_number" keyProperty="cardNumber" useGeneratedKeys="true">
        Insert into debit_cards (card_number, expiration_date, cvv_number, customer_id, customers_ssn)
        values (#{cardNumber}, #{expirationDate}, #{cvvNumber}, #{customerId}, #{ssn})
    </insert>

    <delete id="delete">
        Delete from debit_cards where card_number = #{cardNumber};
    </delete>

</mapper>